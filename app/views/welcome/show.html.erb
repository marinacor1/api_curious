<div class="root-background">
  <div class="github-icon">
    <p class="gh-icon">MyGit<i class="fa fa-github fa-6" aria-hidden="true"></i>Place</p>
  </div>
  <% if current_user %>
    <div class="user-image">
      <p><%= image_tag(current_user.image, width: "100", height: "100") %></p>
    </div>
    <div class="col-md-4 user-texts">
      <p>Welcome, <%= current_user.screen_name %></p>
      <p><%= current_user[:name] %></p>
      <p> List of Repos: <%= link_to "All Your Repos", repos_path %></p>
      <p> List of Organizations: </p>
      <p> Summary Feed from Users You Follow:</p>
      <p> Your Recent Activity: </p>
      <p>Following:</p>
      <p>Followers: </p>
      <p>Starred Repos: <%= @starred.count %></p>
      <p> Your Contributions: </p>
      <p><%= current_user.attributes %></p>
    </div>
  <% end %>
</div>
