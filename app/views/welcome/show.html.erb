<div class="root-background">
  <div class="github-icon">
    <p class="gh-icon">MyGit<i class="fa fa-github fa-6" aria-hidden="true"></i>Place</p>
  </div>
  <% if current_user %>
    <div class="user-image">
      <p><%= image_tag(current_user.image, width: "100", height: "100") %></p>
    </div>
    <div class="col-md-4 user-texts">
      <p>Welcome, <%= current_user.screen_name %></p>
      <p>Name: <%= current_user[:name] %></p>
      <p> <%= link_to "List of All Your Repos", repos_path %></p>
      <p> <%= link_to "List of All Your Organizations", organizations_path %></p>
      <p> <%= link_to "Summary Feed from Users You Follow:", events_path %> </p>
      <p> <%= link_to "Your Recent Activity:", event_path(current_user)  %></p>
      <p>Following: <%= current_user.following %></p>
      <p>Followers: <%= current_user.followers %></p>
      <p>Starred Repos: <%= @starred.count %></p>
      <p> Your Contributions: <%= @my_events %> </p>
    </div>
  <% end %>
</div>
